<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.img" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:fontFamily">@font/harmattan_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextInputLayout.Base" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0.1dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/text_input_outline_color</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="TextInputEditText.Base" parent="FirebaseUI.TextInputEditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/harmattan_regular</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
    </style>

    <style name="MaterialButton.Base" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/rounded_bg_button</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@null</item>
        <item name="colorOnSurface">@color/white</item>
        <!--    text    -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>


    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
</resources>